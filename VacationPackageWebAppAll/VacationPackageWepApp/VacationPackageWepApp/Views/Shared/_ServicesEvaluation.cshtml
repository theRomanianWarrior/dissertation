                 constructAttractionsQuiz += "<div class=\"row align-items-start\">"; 
          }
          
            constructAttractionsQuiz += "<div class=\"col\"><div class=\"game-question-container\"><h3 id=\"display-attractionNumb"+ index +"-question\">Did you enjoyed the " + value +"?</h3></div><div class=\"game-options-container\"><span><input type=\"radio\" id=\"option-yes-attractionNumb"+ index+"\" name=\"option-attractionNumb"+ index +"\" class=\"radio\" value=\"yes\"/><label for=\"option-yes-attractionNumb"+ index +"\" class=\"option\" id=\"option-yes-attractionNumb"+ index +"-label\">Yes</label></span><span><input type=\"radio\" id=\"option-no-attractionNumb"+ index +"\" name=\"option-attractionNumb"+ index +"\" class=\"radio\" value=\"no\"/><label for=\"option-no-attractionNumb"+ index +"\" class=\"option\" id=\"option-no-attractionNumb"+ index+"-label\">No</label></span></div></div>";        
