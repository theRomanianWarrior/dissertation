       let propertyPlaceType = $("input[name=option-property-place-type]")[0].checked;
       let propertyRoomsAndBeds = $("input[name=option-property-rooms-beds]")[0].checked;
       let propertyAmenities = $("input[name=option-property-amenities]")[0].checked;

       let propertyEvaluations = propertyType + ", " + propertyPlaceType + ", " + propertyRoomsAndBeds + ", " + propertyAmenities;
         $.ajax({
                 type: 'POST',
                 url: '/Evaluation/StorePropertyEvaluation/' + propertyEvaluations,
                 success: function (response) {
                   $('#flightForm')[0].reset();
                   $('#search_form_2')[0].reset();
                   $('#search_form_3')[0].reset();
                          },
                 error: function (response) {
                            // code on failure
                        }
       });
    });
});

$(document).ready(function() {
    $("#send-evaluation").click(function(){
		let attractionEvaluations = "";

		$.each(attractionsList, function( index, value ) {
		let inputType = "input[name=option-attractionNumb" + index + "]";
		let input = $(inputType)[0].checked;
		if(index === 0)
		{
			attractionEvaluations = input;
		}
		else
		{
			attractionEvaluations += ", " + input;
		}

        document.getElementById('fade').style.display='none';
         $('#attractions-quiz').hide();
        
		});
        
         $.ajax({
                 type: 'POST',
                 url: '/Evaluation/StoreAttractionsEvaluation/' + attractionEvaluations,
                 success: function (response) {
                     $("input[name=option-departure-flight-class]").prop('checked', false);
                     $("input[name=option-departure-flight-company]").prop('checked', false);
                     $("input[name=option-departure-flight-date]").prop('checked', false);
